{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "g++ build",
            "command": "g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/a.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "g++.exe"
        }
    ]
}